</head>
<body>
	<% include ./partials/navbar.ejs %>
	<div class="container">	
		<div class="row">
			<% errors.forEach(msg => {%>
				<div class="alert alert-danger"><%=msg%></div>
			<%})%>
			<div class="col-md-4 col-md-offset-4">
				<h1 id="h-signup">Signup</h1>
				<form method="POST">
					<div class="form-group">
						<label for="username" id="label-username"></label>
						<input type="text" name='username' lang="ar" placeholder='الاسم الثلاثي أو الرباعي' class="form-control" maxlength="60" autocomplete="off" required autofocus>
					</div>
					<div class="form-group">
						<input type="email" name='email' placeholder='Email' dir="ltr" class="form-control" maxlength="100" required>
					</div>
					<div class="form-group">
						<input type="password" name='password' placeholder='Password' dir="ltr" class="form-control" maxlength="100" required>
					</div>
					<!-- Using one field for password  -->
					<!-- But we should provide a way to double check  -->
					<!-- e.g., a button that can show you what you have typed  -->
					<div class="form-group">
						<input type="text" name='major' placeholder='Major (e.g, SWE)' dir="ltr" class="form-control" pattern="[A-Za-z][A-Za-z]+" maxlength="6" required>
					</div>
					<!-- <div class="form-group">
						<input type="text" name='KFUPMID' placeholder='KFUPM ID' class="form-control" maxlength="10" required>
					</div> -->
					<!-- <input type="hidden" id="notificationToken" name="notificationToken" value=""> -->

					<div class="form-group">
						<label for="enrollment" id="label-enrollment">Date of enrollment</label>
						<select name="enrollment" id="enrollment">
							<% for(var i=0; i<8; i++) {%>
							<option value="<%=new Date().getFullYear() - i%>"><%=new Date().getFullYear() - i%></option>
							<% } %>
						</select>
					</div>
					<!--<input type="hidden" name="_csrf" value="_csrf">-->
					<button type="submit" class="btn btn-success" id="btn-signup">Signup</button>
				</form>
			</div>
		</div>
	</div>

	<% include ./partials/footer.ejs %>
	<% include ./partials/scripts.ejs %>
	<!-- <script src="https://www.gstatic.com/firebasejs/4.3.0/firebase.js"></script> -->
	<script src="/js/signup.js"></script>
</body>
</html>