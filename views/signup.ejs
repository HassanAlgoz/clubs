</head>
<body>
	<% include ./partials/navbar.ejs %>
	<div class="container">	
		<div class="row">
			<% errors.forEach(msg => {%>
				<div class="alert alert-danger"><%=msg%></div>
			<%})%>
			<div class="col-md-4 col-md-offset-4">
				<h1>Signup</h1>
				<form method="POST">
					<div class="form-group">
						<input type="text" name='username' placeholder='Username' class="form-control" maxlength="25" required autofocus>
					</div>
					<!-- Using one field for password  -->
					<!-- But we should provide a way to double check  -->
					<!-- e.g., a button that can show you what you have typed  -->
					<div class="form-group">
						<input type="password" name='password' placeholder='Password' class="form-control" required>
					</div>
					<div class="form-group">
						<input type="email" name='email' placeholder='Email' class="form-control" required>
					</div>
					<div class="form-group">
						<input type="text" name='major' placeholder='Major (e.g, SWE)' class="form-control" pattern="[A-Za-z][A-Za-z]+" maxlength="4" required>
					</div>
					<!-- <div class="form-group">
						<input type="text" name='KFUPMID' placeholder='KFUPM ID' class="form-control" maxlength="10" required>
					</div> -->
					<!-- <input type="hidden" id="notificationToken" name="notificationToken" value=""> -->

					<!-- <div class="form-group">
						<label for="enrollment">Date of enrollment</label>
						<select name="enrollment" id="enrollment">
							for(var i=0; i<8; i++) {
							<option value="new Date().getFullYear() - i"> new Date().getFullYear() - i </option>
							}
						</select>
					</div> -->
					<input type="hidden" name="_csrf" value="<%=_csrf%>">
					<button type="submit" class="btn btn-success">Signup</button>
				</form>
				<h5>Or <a href="/auth/login">Login</a></h5>
			</div>
		</div>
	</div>

	<% include ./partials/footer.ejs %>
	<% include ./partials/scripts.ejs %>
