	<% include ./partials/head.ejs %>
	<title>Post</title>
	<!-- <link rel="stylesheet" href="/css/index.css"> -->

</head>
<body>
	<script>
		const post = <%- JSON.stringify(post) %>
		const user = <%- JSON.stringify(user) %>
		<% if (user) { %>
			user.role = <%- JSON.stringify(user.role) %>
		<% } %>
	</script>
	<% include ./partials/navbar.ejs %>
	<div class="container">
		<h1>Post</h1>
		<h2 id="preview-title"></h2>
		<div id="preview-content"></div>

		<div class="form-group">
			<input id="title" class="form-control" type="text" placeholder="Post Title.." required>
		</div>
		<div class="form-group">
			<textarea id="content" class="form-control" placeholder="Content.." required></textarea>
		</div>
		<div class="form-group">
			<input type="checkbox" id="sentAsEmail">
			<span>Also Send as Email</span>
		</div>
		<% if (post) { %>
			<button id="btn-submit-edit" class="btn btn-success">Submit Edit</button>
			<button id="btn-delete" class="btn btn-danger">Delete</button>
		<% } else { %>
			<button id="btn-create" class="btn btn-success">Create Post</button>
		<% } %>

	</div>

	<% include ./partials/footer.ejs %>
	<% include ./partials/scripts.ejs %>
	<script src="/js/lib/moment.js"></script>
	<script src="/js/post-edit.js"></script>
</body>
</html>
