	<% include head.ejs %>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
  <link rel="stylesheet" href="/css/admin.css">
  
</head>
<body>
  <input type="hidden" id="clubName" value="<%=clubName%>">
  <% include navbar.ejs %>
  <div class="container">
   <div class="row">

    <h1>Admin Panel</h1>
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      
    </div>

    <br>
    <br>

    <div class="col-md-10 col-md-offset-1">

      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title">Events</h3>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th><em class="fa fa-cog"></em></th>
                <th class="hidden-xs">ID</th>
                <th>Title</th>
                <th>Published</th>
                <th>Promises</th>
              </tr> 
            </thead>
            <tbody>
              
              <% for(var i=0; i<events.length; i++) {%>
              <tr>
                <td align="center">
                  <a href="/clubs/<%=clubName.replace(/\s/g, '-')%>/events/<%=events[i]._id%>/edit" class="btn btn-default btn-edit"><em class="fa fa-pencil"></em></a>
                </td>
                <td class="hidden-xs"><%=events[i]._id%></td>
                <td><%=events[i].title%></td>
                <td><%=events[i].publish_date%></td>
                <td align="center"><%=events[i].promisers.length%></td>
              </tr>
              <%}%>
            </tbody>
          </table>
          
        </div>
      </div>
    </div>
  </div>
</div>
<% include scripts.ejs %>
<% include footer.ejs %>
<!-- <script src="/js/manage-events.js" type="text/javascript"></script> -->
</body>
</html>
