	<% include head.ejs %>
	<title>Event</title>
	<link rel="stylesheet" href="/css/event.css">

</head>
<body>
	<% include navbar.ejs %>
	
	<div class="container">
		<input type="hidden" id="user" <%if (user) {%> value="x" <%}%>>
		<input type="hidden" id="userRole" value="<%=userRole%>">
		<input type="hidden" id="id" value="<%=event.id%>">
		<input type="hidden" id="clubName" value="<%=clubName%>">
		<input type="hidden" id="membersOnly" value="<%=event.membersOnly%>">
		<h1 id="title"><%=event.title%></h1>
		<h6>posted <span id="posted"><%=event.publish_date%></span></h6>
		<ul>
			<li><i class="glyphicon glyphicon-calendar"></i> <span id="date"><%=event.date%></span></li>
			<li><i class="glyphicon glyphicon-time"></i> <%=event.time%></li>
			<li><i class="glyphicon glyphicon-map-marker"></i> <%=event.location%></li>
			<% if (event.membersOnly) { %>
			<li><i class="text-danger">This event is for members only</i></li>
			<%}%>
		</ul>


      <div class="panel panel-default panel-table">
        <div class="panel-heading">
          <div class="row">
            <div class="col col-xs-6">
              <h3 class="panel-title">Attendance</h3>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <table class="table table-striped table-bordered table-list">
            <thead>
              <tr>
                <th class="text-center">Attended</th>
                <th>User Name</th>
                <th>Major</th>
                <th>Enrollment</th>
              </tr> 
            </thead>
            <tbody>
              
              <% for(var i=0; i<event.promisers.length; ++i) {%>
              <tr>
                <input type="hidden" class="usersIDs" value="<%=event.promisers[i].user._id%>">
                <td align="center">
                  <div class="input-group">
                    <input type="checkbox" class="attendance" <% if (event.promisers[i].attended == true) {%> checked <%}%>>
                  </div>
                </td>
                <td><%=event.promisers[i].user.name%></td>
                <td><%=event.promisers[i].user.major%></td>
                <td><%=event.promisers[i].user.enrollment%></td>
              </tr>
              <%}%>
            </tbody>
          </table>
          
        </div>
      </div>

      <div class="row text-center">
        <button id="btn-submit" class="btn btn-lg btn-success">Update Attendance</button>
      </div>

    </div>

	</div>

	<% include footer.ejs %>
	<% include scripts.ejs %>
	<script src="/js/event-attendance.js"></script>
</body>
</html>
